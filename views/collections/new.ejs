<!-- views/collections/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Cars</title>
</head>
<body>
  <%- include('../partials/navbar') %>

  <h1>All Cars</h1>
  <ul>
    <% cars.forEach(car => { %>
      <li>
        <h2><%= car.name %> (<%= car.year %>)</h2>
        <p>Model: <%= car.model %></p>
        <p>Price: $<%= car.price %></p>
        <form action="/collections/add" method="POST">
          <input type="hidden" name="carId" value="<%= car._id %>">
          <button type="submit">❤️ Add to Collection</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
