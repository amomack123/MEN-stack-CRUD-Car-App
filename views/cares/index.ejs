<!-- views/collections/new.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Cars</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <%- include('../partials/navbar.ejs') %>
  <a href="/cars/new">add a new car!</a>

  <h1>Your Car Collection</h1>
  <ul>
    <% cars.forEach(car => { %>
      <li>
        <h2><%= car.name %> (<%= car.year %>)</h2>
        <p>Model: <%= car.model %></p>
        <p>Price: $<%= car.price %></p>
        <form action="/cars/<%=car._id%>?_method=DELETE" method="POST">
            <button type = 'submit'>DELETE</button>
        </form>
        <a href="/cars/<%=car._id%>/edit">Edit Car</a>
      </li>
    <% }) %>
  </ul>
</body>
</html>
